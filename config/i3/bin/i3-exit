#!/usr/bin/env bash

pre_lock() {
  killall compton
}

lock() {
  # xsecurelock is not yet in the APT repo so may not be installed. Fallback
  # to i3lock in this case.
  if command -v xsecurelock; then
    xsecurelock
  else
    i3lock -c "#040d24"
  fi
}

post_lock() {
  compton -b & disown
}

case "$1" in
  lock)
    pre_lock
    lock
    post_lock
    ;;
  logout)
    i3-msg exit
    ;;
  suspend)
    pre_lock
    systemctl suspend
    lock
    post_lock
    ;;
  reboot)
    systemctl reboot
    ;;
  shutdown)
    systemctl poweroff
    ;;
  *)
    echo "Usage: $0 {lock|logout|suspend|reboot|shutdown}"
    exit 2
    ;;
esac

exit 0
