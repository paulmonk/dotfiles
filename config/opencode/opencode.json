{
  "$schema": "https://opencode.ai/config.json",
  "model": "anthropic/claude-opus-4-6",
  "theme": "tokyonight",
  "autoupdate": false,
  "instructions": ["~/.claude/rules/*.md"],
  "formatter": {
    "britfix": {
      "command": ["britfix", "--input", "$FILE", "--no-backup"],
      "extensions": [
        ".md",
        ".markdown",
        ".txt",
        ".py",
        ".js",
        ".ts",
        ".jsx",
        ".tsx",
        ".go",
        ".rs",
        ".sh",
        ".json",
        ".html",
        ".css",
        ".scss",
        ".tex"
      ]
    }
  },
  "mcp": {
    "aws-knowledge": {
      "type": "remote",
      "url": "https://knowledge-mcp.global.api.aws",
      "enabled": true
    },
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp"],
      "enabled": true
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "firecrawl": {
      "type": "local",
      "command": ["npx", "-y", "firecrawl-mcp"],
      "environment": {
        "FIRECRAWL_API_KEY": "{env:FIRECRAWL_API_KEY}"
      },
      "enabled": true
    },
    "gcloud": {
      "type": "local",
      "command": ["npx", "-y", "@google-cloud/gcloud-mcp"],
      "enabled": true
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "-y", "@anthropic-ai/mcp-server-playwright"],
      "enabled": true
    }
  }
}
