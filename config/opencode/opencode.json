{
  "$schema": "https://opencode.ai/config.json",
  "model": "anthropic/claude-opus-4-6",
  "theme": "tokyonight",
  "autoupdate": false,
  "instructions": ["~/.claude/rules/*.md"],
  "permission": {
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.env.example": "allow",
      "~/.ssh/*": "deny",
      "~/.gnupg/*": "deny",
      "~/.aws/*": "deny",
      "~/.azure/*": "deny",
      "~/.config/gcloud/*": "deny",
      "~/.config/gh/*": "deny",
      "~/.git-credentials": "deny",
      "~/.docker/config.json": "deny",
      "~/.kube/*": "deny",
      "~/.npmrc": "deny",
      "~/.npm/*": "deny",
      "~/.pypirc": "deny",
      "~/.gem/credentials": "deny",
      "~/Library/Keychains/*": "deny",
      "~/Library/Application Support/*metamask*": "deny",
      "~/Library/Application Support/*electrum*": "deny",
      "~/Library/Application Support/*exodus*": "deny",
      "~/Library/Application Support/*phantom*": "deny",
      "~/Library/Application Support/*solflare*": "deny"
    },
    "bash": {
      "*": "ask",
      "rm *": "deny",
      "sudo *": "deny",
      "mkfs *": "deny",
      "dd *": "deny",
      "git push --force*": "deny",
      "git push *--force*": "deny",
      "git reset --hard*": "deny"
    },
    "edit": {
      "*": "allow",
      "~/.bashrc": "deny",
      "~/.zshrc": "deny",
      "~/.ssh/*": "deny"
    }
  },
  "formatter": {
    "britfix": {
      "command": ["britfix", "--input", "$FILE", "--no-backup"],
      "extensions": [
        ".md",
        ".markdown",
        ".txt",
        ".py",
        ".js",
        ".ts",
        ".jsx",
        ".tsx",
        ".go",
        ".rs",
        ".sh",
        ".json",
        ".html",
        ".css",
        ".scss",
        ".tex"
      ]
    }
  },
  "mcp": {
    "aws-knowledge": {
      "type": "remote",
      "url": "https://knowledge-mcp.global.api.aws",
      "enabled": true
    },
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp"],
      "enabled": true
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "firecrawl": {
      "type": "local",
      "command": ["npx", "-y", "firecrawl-mcp"],
      "environment": {
        "FIRECRAWL_API_KEY": "{env:FIRECRAWL_API_KEY}"
      },
      "enabled": true
    },
    "gcloud": {
      "type": "local",
      "command": ["npx", "-y", "@google-cloud/gcloud-mcp"],
      "enabled": true
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "-y", "@playwright/mcp"],
      "enabled": true
    },
    "serena": {
      "type": "local",
      "command": ["uvx", "--from", "git+https://github.com/oraios/serena", "serena", "start-mcp-server", "--context", "claude-code"],
      "enabled": true
    }
  }
}
