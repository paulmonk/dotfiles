# for background in 16 color terminal, valid background colors include:
# base03, bg, black, any of the non brights

# basic colors ---------------------------------------------------------
color normal        brightyellow    brightblack
color error         red             brightblack
color tilde         black           brightblack
color message       cyan            brightblack
color markers       red             white
color attachment    white           brightblack
color search        brightmagenta   brightblack
#color status        J_black         J_status
color status        brightyellow    black
color indicator     brightblack     yellow
color tree          yellow          brightblack                                  # arrow in threads

# basic monocolor screen
mono  bold          bold
mono  underline     underline
mono  indicator     reverse
mono  error         bold

# index ----------------------------------------------------------------

#color index         red            brightblack        "~D(!~p|~p)"                # deleted
#color index         black          brightblack        ~F                          # flagged
#color index         brightred      brightblack        ~=                          # duplicate messages
#color index         brightgreen    brightblack        "~A!~N!~T!~p!~Q!~F!~D!~P"   # the rest
#color index         J_base         brightblack        "~A~N!~T!~p!~Q!~F!~D"       # the rest, new
color index         red             brightblack       "~A"                        # all messages
color index         brightred       brightblack       "~E"                        # expired messages
color index         blue            brightblack       "~N"                        # new messages
color index         blue            brightblack       "~O"                        # old messages
color index         brightmagenta   brightblack       "~Q"                        # messages that have been replied to
color index         brightgreen     brightblack       "~R"                        # read messages
color index         blue            brightblack       "~U"                        # unread messages
color index         blue            brightblack       "~U~$"                      # unread, unreferenced messages
color index         brightyellow    brightblack       "~v"                        # messages part of a collapsed thread
color index         brightyellow    brightblack       "~P"                        # messages from me
color index         cyan            brightblack       "~p!~F"                     # messages to me
color index         cyan            brightblack       "~N~p!~F"                   # new messages to me
color index         cyan            brightblack       "~U~p!~F"                   # unread messages to me
color index         brightgreen     brightblack       "~R~p!~F"                   # messages to me
color index         red             brightblack       "~F"                        # flagged messages
color index         red             brightblack       "~F~p"                      # flagged messages to me
color index         red             brightblack       "~N~F"                      # new flagged messages
color index         red             brightblack       "~N~F~p"                    # new flagged messages to me
color index         red             brightblack       "~U~F~p"                    # new flagged messages to me
color index         black           red               "~D"                        # deleted messages
color index         brightcyan      brightblack       "~v~(!~N)"                  # collapsed thread with no unread
color index         yellow          brightblack       "~v~(~N)"                   # collapsed thread with some unread
color index         green           brightblack       "~N~v~(~N)"                 # collapsed thread with unread parent
# statusbg used to indicated flagged when foreground color shows other status
# for collapsed thread
color index         red             black             "~v~(~F)!~N"                # collapsed thread with flagged, no unread
color index         yellow          black             "~v~(~F~N)"                 # collapsed thread with some unread & flagged
color index         green           black             "~N~v~(~F~N)"               # collapsed thread with unread parent & flagged
color index         green           black             "~N~v~(~F)"                 # collapsed thread with unread parent, no unread inside, but some flagged
color index         cyan            black             "~v~(~p)"                   # collapsed thread with unread parent, no unread inside, some to me directly
color index         yellow          red               "~v~(~D)"                   # thread with deleted (doesn't differentiate between all or partial)
#color index         yellow          brightblack       "~(~N)"                     # messages in threads with some unread
#color index         green           brightblack       "~S"                        # superseded messages
#color index         red             brightblack       "~T"                        # tagged messages
#color index         brightred       red               "~="                        # duplicated messages

# message headers ------------------------------------------------------

#color header        brightgreen     brightblack      "^"
color hdrdefault    brightgreen     brightblack
color header        brightyellow    brightblack      "^(From)"
color header        blue            brightblack      "^(Subject)"

# body -----------------------------------------------------------------

color quoted        blue            brightblack
color quoted1       cyan            brightblack
color quoted2       yellow          brightblack
color quoted3       red             brightblack
color quoted4       brightred       brightblack

color signature     brightgreen     brightblack
color bold          black           brightblack
color underline     black           brightblack
color normal        brightblue      brightblack
#
color body          brightcyan      brightblack      "[;:][-o][)/(|]"    # emoticons
color body          brightcyan      brightblack      "[;:][)(|]"         # emoticons
color body          brightcyan      brightblack      "[*]?((N)?ACK|CU|LOL|SCNR|BRB|BTW|CWYL|\
                                                      |FWIW|vbg|GD&R|HTH|HTHBE|IMHO|IMNSHO|\
                                                      |IRL|RTFM|ROTFL|ROFL|YMMV)[*]?"
color body          brightcyan      brightblack      "[ ][*][^*]*[*][ ]?" # more emoticon?
color body          brightcyan      brightblack      "[ ]?[*][^*]*[*][ ]" # more emoticon?

## pgp

color body          red             brightblack      "(BAD signature)"
color body          cyan            brightblack      "(Good signature)"
color body          brightblack     brightblack      "^gpg: Good signature .*"
color body          brightyellow    brightblack      "^gpg: "
color body          brightyellow    red              "^gpg: BAD signature from.*"
mono  body          bold                             "^gpg: Good signature"
mono  body          bold                             "^gpg: BAD signature from.*"

# yes, an insance URL regex
color body          red             brightblack      "([a-z][a-z0-9+-]*://(((([a-z0-9_.!~*'();:&=+$,-]|%[0-9a-f][0-9a-f])*@)?((([a-z0-9]([a-z0-9-]*[a-z0-9])?)\\.)*([a-z]([a-z0-9-]*[a-z0-9])?)\\.?|[0-9]+\\.[0-9]+\\.[0-9]+\\.[0-9]+)(:[0-9]+)?)|([a-z0-9_.!~*'()$,;:@&=+-]|%[0-9a-f][0-9a-f])+)(/([a-z0-9_.!~*'():@&=+$,-]|%[0-9a-f][0-9a-f])*(;([a-z0-9_.!~*'():@&=+$,-]|%[0-9a-f][0-9a-f])*)*(/([a-z0-9_.!~*'():@&=+$,-]|%[0-9a-f][0-9a-f])*(;([a-z0-9_.!~*'():@&=+$,-]|%[0-9a-f][0-9a-f])*)*)*)?(\\?([a-z0-9_.!~*'();/?:@&=+$,-]|%[0-9a-f][0-9a-f])*)?(#([a-z0-9_.!~*'();/?:@&=+$,-]|%[0-9a-f][0-9a-f])*)?|(www|ftp)\\.(([a-z0-9]([a-z0-9-]*[a-z0-9])?)\\.)*([a-z]([a-z0-9-]*[a-z0-9])?)\\.?(:[0-9]+)?(/([-a-z0-9_.!~*'():@&=+$,]|%[0-9a-f][0-9a-f])*(;([-a-z0-9_.!~*'():@&=+$,]|%[0-9a-f][0-9a-f])*)*(/([-a-z0-9_.!~*'():@&=+$,]|%[0-9a-f][0-9a-f])*(;([-a-z0-9_.!~*'():@&=+$,]|%[0-9a-f][0-9a-f])*)*)*)?(\\?([-a-z0-9_.!~*'();/?:@&=+$,]|%[0-9a-f][0-9a-f])*)?(#([-a-z0-9_.!~*'();/?:@&=+$,]|%[0-9a-f][0-9a-f])*)?)[^].,:;!)? \t\r\n<>\"]"
