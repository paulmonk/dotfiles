# Images
image/*; ~/.config/mutt/etc/view_attachment %s jpg

# PDFs
application/pdf; ~/.config/mutt/etc/view_attachment %s pdf

# Calendars
application/ics; khal printics %s; copiousoutput
text/calendar; khal printics %s; copiousoutput

# Text / HTML
text/plain; ${EDITOR} %s; test=test -n "${EDITOR}"
text/html; ${BROWSER} %s; test=test -n "${DISPLAY}" && test -n "${BROWSER}"; nametemplate=%s.html
text/html; w3m -I %{charset} -T text/html; copiousoutput
