{
  "env": {
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1"
  },
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "permissions": {
    "allow": [
      "Bash(awk:*)",
      "Bash(cat:*)",
      "Bash(cut:*)",
      "Bash(diff:*)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(for:*)",
      "Bash(git:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(jq:*)",
      "Bash(ls:*)",
      "Bash(mise:*)",
      "Bash(rg:*)",
      "Bash(ruff:*)",
      "Bash(sed:*)",
      "Bash(sort:*)",
      "Bash(tail:*)",
      "Bash(test:*)",
      "Bash(touch:*)",
      "Bash(uniq:*)",
      "Bash(xargs:*)",
      "Bash(uv:*)",
      "mcp__ide__getDiagnostics",
      "mcp__firecrawl__firecrawl_*",
      "mcp__plugin_atlassian_atlassian__*",
      "mcp__plugin_context7__*"
    ],
    "deny": [
      "Bash(rm:*)",
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)"
    ],
    "defaultMode": "plan"
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "echo ' When working temporally, use this datatime to ground your search: $(date).'"
          },
          {
            "type": "command",
            "command": "echo ' Ensure alignment to the project coding conventions.'"
          },
          {
            "type": "command",
            "command": "echo ' Remember to follow: KISS, DRY, DAMP (for tests), SOLID, YAGNI.'"
          },
          {
            "type": "command",
            "command": "echo ' Run the linting (if available) on any changes, ensure the code meets our standards.'"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "atlassian@claude-plugins-official": true,
    "code-review@claude-plugins-official": false,
    "commit-commands@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "exa-mcp-server@exa-mcp-server": true,
    "feature-dev@claude-plugins-official": false,
    "frontend-design@claude-plugins-official": false,
    "github@claude-plugins-official": false,
    "gitlab@claude-plugins-official": false,
    "gopls-lsp@claude-plugins-official": true,
    "hookify@claude-plugins-official": true,
    "lua-lsp@claude-plugins-official": false,
    "playwright@claude-plugins-official": true,
    "pr-review-toolkit@claude-plugins-official": false,
    "pyright-lsp@claude-plugins-official": true,
    "ralph-wiggum@claude-plugins-official": true,
    "rust-analyzer-lsp@claude-plugins-official": true,
    "safety-hooks@cctools-plugins": true,
    "security-guidance@claude-plugins-official": true,
    "slack@claude-plugins-official": false,
    "superpowers@superpowers-marketplace": true,
    "swift-lsp@claude-plugins-official": false,
    "typescript-lsp@claude-plugins-official": true,
    "vercel@claude-plugins-official": false
  },
  "alwaysThinkingEnabled": true
}
