{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "cleanupPeriodDays": 365,
  "env": {
    "CLAUDE_CODE_DISABLE_AUTO_MEMORY": "1",
    "CLAUDE_CODE_DISABLE_FEEDBACK_SURVEY": "1",
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0",
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1",
    "DISABLE_AUTOUPDATER": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_TELEMETRY": "1"
  },
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "permissions": {
    "deny": [
      "Bash(rm -rf *)",
      "Bash(rm -fr *)",
      "Bash(sudo *)",
      "Bash(mkfs *)",
      "Bash(dd *)",
      "Bash(curl *|bash*)",
      "Bash(wget *|bash*)",
      "Bash(git push --force*)",
      "Bash(git push *--force*)",
      "Bash(git reset --hard*)",
      "Edit(~/.bashrc)",
      "Edit(~/.zshrc)",
      "Edit(~/.ssh/**)",
      "Read(~/.ssh/**)",
      "Read(~/.gnupg/**)",
      "Read(~/.aws/**)",
      "Read(~/.azure/**)",
      "Read(~/.config/gh/**)",
      "Read(~/.git-credentials)",
      "Read(~/.docker/config.json)",
      "Read(~/.kube/**)",
      "Read(~/.npmrc)",
      "Read(~/.npm/**)",
      "Read(~/.pypirc)",
      "Read(~/.gem/credentials)",
      "Read(~/Library/Keychains/**)",
      "Read(~/Library/Application Support/**/metamask*/**)",
      "Read(~/Library/Application Support/**/electrum*/**)",
      "Read(~/Library/Application Support/**/exodus*/**)",
      "Read(~/Library/Application Support/**/phantom*/**)",
      "Read(~/Library/Application Support/**/solflare*/**)"
    ]
  },
  "enableAllProjectMcpServers": false,
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "printf '[CONTEXT] Now: %s\\n' \"$(date +'%Y-%m-%d %H:%M:%S %Z')\""
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/homunculus-start/hook",
            "async": true
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/tmux-guard/hook"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/trash-guard/hook"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/grep-guard/hook"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/find-guard/hook"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/bq-query-guard/hook"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/bd-create-guard/hook"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/pkg-manager-guard/hook"
          }
        ]
      },
      {
        "matcher": "WebFetch",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/web-fetch-guard/hook"
          }
        ]
      },
      {
        "matcher": "WebSearch",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/web-search-guard/hook"
          }
        ]
      },
      {
        "matcher": "Edit|Write|MultiEdit|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/worktree-guard/hook"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/bash-audit-log/hook",
            "async": true
          }
        ]
      },
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/britfix/hook",
            "async": true
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/homunculus-recall/hook",
            "async": true
          }
        ]
      },
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/homunculus-observe/hook",
            "async": true
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/notify/hook",
            "async": true
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/notify/hook",
            "async": true
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/homunculus-stop/hook",
            "async": true
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline",
    "padding": 0
  },
  "enabledPlugins": {
    "beads@beads-marketplace": true,
    "claude-code-setup@claude-plugins-official": true,
    "claude-md-management@claude-plugins-official": true,
    "differential-review@trailofbits": true,
    "insecure-defaults@trailofbits": true,
    "marketing-skills@marketingskills": true,
    "sharp-edges@trailofbits": true,
    "static-analysis@trailofbits": true,
    "superpowers@superpowers-marketplace": true,
    "agent-browser@agent-browser": true
  },
  "extraKnownMarketplaces": {
    "agent-browser": {
      "source": {
        "source": "github",
        "repo": "vercel-labs/agent-browser"
      }
    },
    "beads-marketplace": {
      "source": {
        "source": "github",
        "repo": "steveyegge/beads"
      }
    },
    "claude-plugins-official": {
      "source": {
        "source": "github",
        "repo": "anthropics/claude-plugins-official"
      }
    },
    "knowledge-work-plugins": {
      "source": {
        "source": "github",
        "repo": "anthropics/knowledge-work-plugins"
      }
    },
    "marketingskills": {
      "source": {
        "source": "github",
        "repo": "coreyhaines31/marketingskills"
      }
    },
    "superpowers-marketplace": {
      "source": {
        "source": "github",
        "repo": "obra/superpowers"
      }
    },
    "trailofbits": {
      "source": {
        "source": "github",
        "repo": "trailofbits/skills"
      }
    },
    "trailofbits-skills-curated": {
      "source": {
        "source": "github",
        "repo": "trailofbits/skills-curated"
      }
    }
  },
  "outputStyle": "Personal",
  "sandbox": {
    "enabled": true
  },
  "spinnerVerbs": {
    "mode": "replace",
    "verbs": [
      "Tonight's the night",
      "Taking out the trash",
      "Following the code",
      "Hiding in plain sight",
      "Studying the blood splatter",
      "Preparing the slide deck",
      "I think, therefore I code",
      "To ship or not to ship",
      "The only thing we have to fear is production",
      "Give me liberty or give me a debugger",
      "That's one small step for a function",
      "I came, I saw, I refactored",
      "The unexamined code is not worth deploying",
      "Fortune favours the bold commit",
      "In the middle of difficulty lies opportunity",
      "Not all those who wander are lost in the codebase",
      "Elementary, my dear Watson",
      "Here's looking at you, kid",
      "After all, tomorrow is another deploy",
      "May the source be with you",
      "I'm going to make him an offer he can't refactor",
      "We're going to need a bigger buffer",
      "Houston, we have a problem",
      "What we've got here is failure to communicate",
      "I'll be back after this build",
      "You can't handle the root cause",
      "The truth is rarely pure and never simple",
      "All happy codebases are alike",
      "It was the best of times, it was the worst of bugs",
      "So it goes",
      "Stay hungry, stay foolish, stay shipping",
      "The impediment to action advances action",
      "Simplicity is the ultimate sophistication",
      "Move fast and fix things",
      "If you gaze into the abyss, the abyss gazes back",
      "Do or do not, there is no try-catch",
      "Hello, friend",
      "Control is an illusion",
      "People always make the best exploits",
      "Is any of it real?",
      "Give a man a zero-day and he has access for a day",
      "This system will self-destruct in five minutes",
      "Sacred cows make great hamburgers",
      "If in doubt, mumble",
      "It's later than you think",
      "Save the whales. Collect the whole set",
      "All your files have been destroyed (sorry)",
      "The discs are getting full; purge a file today",
      "Grub first, then ethics",
      "Beware of geeks bearing graft",
      "Any excuse will serve a tyrant"
    ]
  },
  "alwaysThinkingEnabled": true,
  "plansDirectory": "./.claude/plans",
  "showTurnDuration": true,
  "defaultMode": "plan"
}
