{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_CODE_DISABLE_AUTO_MEMORY": "1",
    "CLAUDE_CODE_DISABLE_FEEDBACK_SURVEY": "1",
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0",
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1",
    "DISABLE_AUTOUPDATER": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_TELEMETRY": "1"
  },
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "alwaysThinkingEnabled": true,
  "cleanupPeriodDays": 365,
  "enableAllProjectMcpServers": false,
  "plansDirectory": "./.claude/plans",
  "showTurnDuration": true,
  "permissions": {
    "deny": [
      "Bash(rm -rf *)",
      "Bash(rm -fr *)",
      "Bash(sudo *)",
      "Bash(mkfs *)",
      "Bash(dd *)",
      "Bash(curl *|bash*)",
      "Bash(wget *|bash*)",
      "Bash(git push --force*)",
      "Bash(git push *--force*)",
      "Bash(git reset --hard*)",
      "Edit(~/.bashrc)",
      "Edit(~/.zshrc)",
      "Edit(~/.ssh/**)",
      "Read(~/.ssh/**)",
      "Read(~/.gnupg/**)",
      "Read(~/.aws/**)",
      "Read(~/.azure/**)",
      "Read(~/.config/gh/**)",
      "Read(~/.git-credentials)",
      "Read(~/.docker/config.json)",
      "Read(~/.kube/**)",
      "Read(~/.npmrc)",
      "Read(~/.npm/**)",
      "Read(~/.pypirc)",
      "Read(~/.gem/credentials)",
      "Read(~/Library/Keychains/**)",
      "Read(~/Library/Application Support/**/metamask*/**)",
      "Read(~/Library/Application Support/**/electrum*/**)",
      "Read(~/Library/Application Support/**/exodus*/**)",
      "Read(~/Library/Application Support/**/phantom*/**)",
      "Read(~/Library/Application Support/**/solflare*/**)"
    ]
  },
  "defaultMode": "plan",
  "sandbox": {
    "enabled": true
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "printf '[CONTEXT] Now: %s\\n' \"$(date +'%Y-%m-%d %H:%M:%S %Z')\""
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/homunculus-start/hook",
            "async": true
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/tmux-guard/hook"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/trash-guard/hook"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/grep-guard/hook"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/find-guard/hook"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/bq-query-guard/hook"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/bd-create-guard/hook"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/pkg-manager-guard/hook"
          }
        ]
      },
      {
        "matcher": "WebFetch",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/web-fetch-guard/hook"
          }
        ]
      },
      {
        "matcher": "WebSearch",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/web-search-guard/hook"
          }
        ]
      },
      {
        "matcher": "Edit|Write|MultiEdit|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/worktree-guard/hook"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/bash-audit-log/hook",
            "async": true
          }
        ]
      },
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/britfix/hook",
            "async": true
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/homunculus-recall/hook",
            "async": true
          }
        ]
      },
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/homunculus-observe/hook",
            "async": true
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/notify/hook",
            "async": true
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/notify/hook",
            "async": true
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/homunculus-stop/hook",
            "async": true
          }
        ]
      }
    ]
  },
  "outputStyle": "Personal",
  "spinnerVerbs": {
    "mode": "replace",
    "verbs": [
      "All constants are variables",
      "Debug is human, de-fix divine",
      "Eschewing obfuscation",
      "Backed up the system lately?",
      "Chaos is King and Magic is loose",
      "Ahead warp factor one, Mr. Sulu",
      "Doing gets it done",
      "What soon grows old? Gratitude",
      "The superfluous is very necessary",
      "When does later become never?",
      "Never trust a computer you can't repair",
      "Heisenberg might have been here",
      "core error - bus dumped",
      "An adequate bootstrap is a contradiction",
      "Weekends were made for programming",
      "How can you work when the system's so crowded?",
      "A man paints with his brains not his hands",
      "Innovation is hard to schedule",
      "Life is a series of rude awakenings",
      "Coincidences are spiritual puns",
      "All great discoveries are made by mistake",
      "Death is nature's way of saying Howdy",
      "Don't look back, the lemmings are gaining",
      "I've got a very bad feeling about this",
      "New York is real. The rest is done with mirrors",
      "A hammer sometimes misses its mark, a bouquet never",
      "Anger is momentary madness",
      "Bank error in your favour. Collect $200",
      "Dammit Jim, I'm an actor, not a doctor",
      "It is easier to run down a hill than up one"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline",
    "padding": 0
  },
  "enabledPlugins": {
    "beads@beads-marketplace": true,
    "claude-code-setup@claude-plugins-official": true,
    "claude-md-management@claude-plugins-official": true,
    "differential-review@trailofbits": true,
    "insecure-defaults@trailofbits": true,
    "marketing-skills@marketingskills": true,
    "sharp-edges@trailofbits": true,
    "static-analysis@trailofbits": true,
    "superpowers@superpowers-marketplace": true
  },
  "extraKnownMarketplaces": {
    "agent-browser": {
      "source": {
        "source": "github",
        "repo": "vercel-labs/agent-browser"
      }
    },
    "beads-marketplace": {
      "source": {
        "source": "github",
        "repo": "steveyegge/beads"
      }
    },
    "claude-plugins-official": {
      "source": {
        "source": "github",
        "repo": "anthropics/claude-plugins-official"
      }
    },
    "knowledge-work-plugins": {
      "source": {
        "source": "github",
        "repo": "anthropics/knowledge-work-plugins"
      }
    },
    "marketingskills": {
      "source": {
        "source": "github",
        "repo": "coreyhaines31/marketingskills"
      }
    },
    "superpowers-marketplace": {
      "source": {
        "source": "github",
        "repo": "obra/superpowers"
      }
    },
    "trailofbits": {
      "source": {
        "source": "github",
        "repo": "trailofbits/skills"
      }
    },
    "trailofbits-skills-curated": {
      "source": {
        "source": "github",
        "repo": "trailofbits/skills-curated"
      }
    }
  }
}
