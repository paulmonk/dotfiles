#!/usr/bin/env bash
#
# Inject learned instincts at session start, using qmd for smart retrieval
# when available, falling back to all instincts.
#
# Outputs a compact index (trigger + confidence only). The agent reads
# the full instinct file on demand when it encounters a matching trigger.

set -o errexit -o errtrace -o pipefail -o nounset

readonly HOMUNCULUS_DIR="${HOME}/.claude/homunculus"
readonly INSTINCTS_DIR="${HOMUNCULUS_DIR}/instincts/personal"
readonly CONVICTIONS_DIR="${HOMUNCULUS_DIR}/convictions"
readonly OBS_DIR="${HOMUNCULUS_DIR}/observations"
readonly MAX_INSTINCTS=15
# Skip the qmd query when the instinct count is low enough that
# showing all of them is essentially free. qmd's relevance filtering
# only earns its ~10s latency once you have enough instincts that
# injecting all of them wastes meaningful context.
readonly QMD_THRESHOLD=30

# Read the SessionStart payload for context.
input=$(cat)
readonly input
SESSION_CWD=$(echo "${input}" | jq -r '.cwd // empty' 2>/dev/null)
readonly SESSION_CWD

# Build a search query from the project context.
build_query() {
  local parts=()
  local project_name
  project_name=$(basename "${SESSION_CWD:-}")

  if [[ -n ${project_name} ]]; then
    parts+=("${project_name}")
  fi

  # Detect language/framework hints from the project directory.
  if [[ -n ${SESSION_CWD} ]] && [[ -d ${SESSION_CWD} ]]; then
    [[ -f ${SESSION_CWD}/Cargo.toml ]] && parts+=("rust cargo")
    [[ -f ${SESSION_CWD}/go.mod ]] && parts+=("go golang")
    [[ -f ${SESSION_CWD}/package.json ]] && parts+=("javascript typescript node")
    [[ -f ${SESSION_CWD}/pyproject.toml || -f ${SESSION_CWD}/setup.py ]] && parts+=("python")
    [[ -f ${SESSION_CWD}/justfile ]] && parts+=("just task runner")
    [[ -f ${SESSION_CWD}/Makefile ]] && parts+=("make build")
    [[ -f ${SESSION_CWD}/dbt_project.yml ]] && parts+=("dbt sql analytics")
    [[ -d ${SESSION_CWD}/.terraform ]] && parts+=("terraform infrastructure")
    [[ -f ${SESSION_CWD}/Dockerfile ]] && parts+=("docker container")
  fi

  echo "${parts[*]}"
}

# Format an instinct as a compact index line: trigger + confidence only.
# The full action is in the file; the agent reads it on demand.
# Skips instincts already promoted to convictions/.
format_instinct() {
  local f="$1"
  local domain trigger confidence

  # Skip promoted instincts (already in convictions/).
  grep -q "^promoted: true" "$f" && return

  domain=$(sed -n 's/^domain: *//p' "$f" | tr -d '"' | head -1)
  trigger=$(sed -n 's/^trigger: *//p' "$f" | sed 's/^"//;s/"$//' | head -1)
  confidence=$(sed -n 's/^confidence: *//p' "$f" | head -1)

  [[ -n ${domain} && -n ${trigger} ]] || return
  echo "- ${domain}: ${trigger} (${confidence:-?})"
}

# Resolve qmd:// URIs to real file paths.
resolve_qmd_uri() {
  local collection="$1"
  local base_dir="$2"
  sed "s|^qmd://${collection}/|${base_dir}/|"
}

# Smart retrieval via qmd: query the instincts collection and return the
# top N most relevant instinct file paths.
smart_retrieve() {
  local query="$1"

  # qmd query uses hybrid search (BM25 + vector + reranking).
  qmd query "${query}" -c homunculus-instincts -n "${MAX_INSTINCTS}" --files 2>/dev/null |
    awk -F, '{print $3}' |
    resolve_qmd_uri "homunculus-instincts" "${INSTINCTS_DIR}"
}

# Fallback: return all instinct file paths.
all_instincts() {
  local files=("${INSTINCTS_DIR}"/*.md)
  if [[ -f ${files[0]} ]]; then
    printf '%s\n' "${files[@]}"
  fi
}

main() {
  [[ -d ${INSTINCTS_DIR} ]] || return

  # Inject convictions first (higher priority than instincts).
  if [[ -d ${CONVICTIONS_DIR} ]] && compgen -G "${CONVICTIONS_DIR}/*.md" >/dev/null 2>&1; then
    echo "[CONVICTIONS]"
    local cf c_name c_action
    for cf in "${CONVICTIONS_DIR}"/*.md; do
      [[ -f ${cf} ]] || continue
      c_name=$(sed -n 's/^name: *//p' "${cf}" | head -1)
      c_action=$(sed -n 's/^action: *"*//p' "${cf}" | sed 's/"$//' | head -1)
      [[ -n ${c_name} && -n ${c_action} ]] || continue
      echo "- **${c_name}**: ${c_action}"
    done
    echo ""
  fi

  local query instinct_files all_files total
  all_files=$(all_instincts)
  query=$(build_query)

  # Use qmd for smart retrieval when the instinct count is large enough
  # to justify the query latency (~10s). Below the threshold, showing
  # all instincts in the compact index format is essentially free.
  if [[ -n ${all_files} ]]; then
    total=$(echo "${all_files}" | wc -l | tr -d ' ')
  else
    total=0
  fi

  if ((total > QMD_THRESHOLD)) && command -v qmd >/dev/null 2>&1 && [[ -n ${query} ]]; then
    instinct_files=$(smart_retrieve "${query}")
  fi

  # Fall back to all instincts if smart retrieval returned nothing.
  if [[ -z ${instinct_files:-} ]]; then
    instinct_files="${all_files}"
  fi

  [[ -n ${instinct_files} ]] || return

  local count
  count=$(echo "${instinct_files}" | wc -l | tr -d ' ')

  echo "[INSTINCTS]"
  while IFS= read -r f; do
    [[ -f $f ]] || continue
    format_instinct "$f"
  done <<<"${instinct_files}"

  echo ""
  if ((count < total)); then
    echo "[HOMUNCULUS] Showing ${count}/${total} instincts (filtered by: ${query})"
  fi
  echo "[HOMUNCULUS] Full details: Read ~/.claude/homunculus/instincts/personal/<name>.md"

  # Report pending observations.
  if compgen -G "${OBS_DIR}/*.jsonl" >/dev/null 2>&1; then
    local obs_count
    obs_count=$(cat "${OBS_DIR}"/*.jsonl 2>/dev/null | wc -l | tr -d ' ')
    if ((obs_count > 0)); then
      echo "[HOMUNCULUS] ${obs_count} pending observations"
    fi
  fi
}

main
