#!/usr/bin/env bash
#/ Thin wrapper that delegates to the shared agent-notify script.
#/
#/ Claude Code passes JSON on stdin and expects it back on stdout.
#/ agent-notify handles the passthrough automatically when reading
#/ from stdin.
set -o errexit -o errtrace -o pipefail -o nounset

if ! command -v agent-notify &>/dev/null; then
  echo "[notify] agent-notify not found on PATH. Run 'just install' to set up." >&2
  # Maintain passthrough contract: forward stdin to stdout.
  cat
  exit 0
fi

exec agent-notify
