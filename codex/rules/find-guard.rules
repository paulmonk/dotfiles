# Prefer fd over find for faster, .gitignore-aware file searches.
prefix_rule(
    pattern = ["find"],
    decision = "prompt",
    justification = "Use fd instead of find. It is faster, respects .gitignore, and has simpler syntax.",
    match = [
        "find . -name '*.py'",
        "find src/ -type f",
        "find . -name '*.log' -delete",
    ],
)
