# This .editorconfig file should live outside of all repositories (and thus not be committed to source control) in
# a parent directory, as it includes personal preference presentation settings, like a tab's `indent_size`.
root = true

[*]
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.{md,html,py}]
indent_size = 2

[Makefile]
indent_style = tab

[shell]
# For shfmt: custom shell rules
shell_variant = auto
binary_next_line = true
switch_case_indent = true

# Ignore zsh files - shfmt doesn't fully support zsh syntax
[*.zsh]
ignore = true

[**/zsh/**]
ignore = true

[.zshrc]
ignore = true

[.zshenv]
ignore = true

[.zprofile]
ignore = true
