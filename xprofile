# Load user X resource config
if [ -x "${XDG_CONFIG_HOME}/X11/xresources" ]; then
  xrdb -merge "${XDG_CONFIG_HOME}/X11/Xresources"
fi

# X11 Key repeat (delay / rate)
xset r rate 230 35

# DPMS monitor setting (Standby -> Suspend -> Off, in seconds)
xset dpms 500 700 900

# Disable PC speaker beeps
xset -b

# Activate numlock
if command -v numlockx >/dev/null 2>&1; then
  numlockx &
fi

# Setup Gnome Keyring.
if command -v gnome-keyring-daemon >/dev/null 2>&1; then
  eval "$(gnome-keyring-daemon --start --components=pkcs11,secrets)"
fi

# Autorandr the displays.
if command -v autorandr >/dev/null 2>&1; then
  autorandr --change
fi

# Set background
if command -v nitrogen >/dev/null 2>&1; then
  nitrogen --restore &
fi

# Composite manager
if command -v compton >/dev/null 2>&1; then
  compton -b &
fi

# USBGuard
if command -v usbguard-applet-qt >/dev/null 2>&1; then
  usbguard-applet-qt &
fi

# Udiskie
if command -v udiskie >/dev/null 2>&1; then
  udiskie &
fi

# Run dunst if not started
pgrep -x dunst || systemctl --user start dunst &

# Run redshift if not started
pgrep -x redshift || systemctl --user start redshift-gtk &

#  vim: set ft=sh ts=2 sw=2 tw=80 noet :
